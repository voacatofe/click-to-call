# =============================================================================
# API Configuration - Click-to-Call System
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
PORT=3001
NODE_ENV=development

# -----------------------------------------------------------------------------
# Asterisk AMI Configuration
# -----------------------------------------------------------------------------
ASTERISK_HOST=asterisk
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USER=admin
ASTERISK_AMI_PASSWORD=secret

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# -----------------------------------------------------------------------------
# RD Station CRM API (v1) Configuration
# -----------------------------------------------------------------------------
RD_STATION_CLIENT_ID=your_rd_client_id_here
RD_STATION_CLIENT_SECRET=your_rd_client_secret_here
RD_STATION_API_BASE=https://api.rd.services
RD_STATION_REDIRECT_URI=http://localhost:3001/api/rdcrm/callback

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=1h
ENCRYPTION_SECRET=your_encryption_secret_here

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/api.log

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true 