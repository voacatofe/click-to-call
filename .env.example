# RD Station API Credentials
RD_STATION_CLIENT_ID=your_client_id_here
RD_STATION_CLIENT_SECRET=your_client_secret_here
RD_STATION_API_BASE=https://api.rd.services

# URLs - Use full URLs with protocol
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com/api

# Security Secrets - Generate strong random strings
ENCRYPTION_SECRET=generate_32_char_random_string_here
JWT_SECRET=generate_32_char_random_string_here
JWT_REFRESH_SECRET=generate_32_char_random_string_here
JWT_RESET_SECRET=generate_32_char_random_string_here
JWT_VERIFY_SECRET=generate_32_char_random_string_here

# JWT Expiration Times
JWT_EXPIRATION_TIME=1h
JWT_REFRESH_EXPIRATION_TIME=7d
JWT_RESET_EXPIRATION_TIME=1h
JWT_VERIFY_EXPIRATION_TIME=1h

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/click_to_call
POSTGRES_USER=postgres
POSTGRES_PASSWORD=generate_strong_password_here
POSTGRES_DB=click_to_call

# Application Configuration
PORT=3001
NODE_ENV=production

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10
LOG_FILE_ENCODING=utf-8 