# =============================================================================
# ENVIRONMENT EXAMPLE FILE - Click-to-Call Project
# =============================================================================
# Copy this file to .env and update with your actual values
# Generate secure passwords with: openssl rand -base64 32

# =============================================================================
# ASTERISK SECURITY CREDENTIALS (CRITICAL)
# =============================================================================
AMI_SECRET=your_strong_ami_secret_here_change_immediately
AGENT_1001_PASSWORD=your_strong_agent_password_here_change_immediately

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here_minimum_32_chars

# =============================================================================
# ASTERISK CONFIGURATION
# =============================================================================
ASTERISK_HOST=localhost
ASTERISK_WS_PORT=8088
ASTERISK_WSS_PORT=8089

# =============================================================================
# SUPABASE DATABASE
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# RD STATION CRM INTEGRATION
# =============================================================================
RD_STATION_CLIENT_ID=your_rd_station_client_id
RD_STATION_CLIENT_SECRET=your_rd_station_client_secret

# =============================================================================
# DEVELOPMENT / PRODUCTION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. NEVER commit this file with real credentials to version control
# 2. Use different passwords for development and production
# 3. Rotate all passwords regularly
# 4. Use environment-specific values in production (not localhost)
# 5. Enable proper firewall rules in production

# =============================================================================
# PRODUCTION OVERRIDES (Replace localhost with actual domains/IPs)
# =============================================================================
# ASTERISK_HOST=your-production-domain.com
# API_BASE_URL=https://api.your-domain.com
# NEXT_PUBLIC_API_URL=https://api.your-domain.com 